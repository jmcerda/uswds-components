{% block paragraph %}
  {%
    set classes = [
    'usa-media-block',
    'tablet:grid-col',
  ]
  %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div>
        <img class="usa-media-block__img"  src="{{ file_url(paragraph.field_image.entity.field_media_image.entity.fileuri) }}" alt="{{ paragraph.field_image.entity.field_media_image.alt }}">
      </div>
      <div class="usa-media-block__body">
        {% if paragraph.field_link.0.url %}<a href="{{ paragraph.field_link.0.url }}">{% endif %}<h2 class="usa-graphic-list__heading">{{ paragraph.field_title.value }}</h2>{% if paragraph.field_link.0.url %}</a>{% endif %}
        {{ content|without('field_image', 'field_title') }}
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
